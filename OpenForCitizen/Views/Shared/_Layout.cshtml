<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Open4Citizen</title>
    <script src="~/scripts/jquery-1.10.2.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar {
            background-color: transparent;
            background: transparent;
            border-color: transparent;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#homeIcon').hover(function () {
                $(this).css('color', 'white');
            }, function () {
                $(this).css("color", "gray");
            });
        });

    </script>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12" style="float:right">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a class="glyphicon glyphicon-home" id="homeIcon" style="color:gray; font-size:50px; margin-top:10px; float:right"
                                href="@Url.Action("Index","Home")">  </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
   
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
