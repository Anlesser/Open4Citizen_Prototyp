<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Open4Citizen</title>
    <script src="~/scripts/jquery-3.1.1.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar {
            background-color: transparent;
            background: transparent;
            border-color: transparent;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#backIcon').hover(function () {
                $(this).css('color', 'lightgray');
                $(this).click(function () {
                    parent.history.back();
                });
            }, function () {
                $(this).css("color", "gray");
            });
        });

        $(document).ready(function () {
            $('#homeIcon').hover(function () {
                $(this).css('color', 'lightgray');
            }, function () {
                $(this).css("color", "gray");
            });
        });

    </script>
</head>
<body>
    @if (Request.Url.ToString() != "http://localhost:60076/") // döljer bakåtknappen på förstasidan.
    {
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6" style="float:left">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a class="glyphicon glyphicon-arrow-left" id="backIcon" style="color:gray; font-size:50px; float:left" href="#"></a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6" style="float:right">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a class="glyphicon glyphicon-home" id="homeIcon" style="color:gray; font-size:50px; float:right"
                                   href="@Url.Action("Index","Home")"></a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
