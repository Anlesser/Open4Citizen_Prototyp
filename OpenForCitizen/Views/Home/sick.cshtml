
@{
    ViewBag.Title = "Sick";
}

<head>
    <script>
       
        function getImageCoords(event,img){
            var posX = event.offsetX ? (event.offsetX) : event.pageX - img.offsetLeft;
            var posY = event.offsetY ? (event.offsetY) : event.pageY - img.offsetTop;

            var coords = "X: " + posX + ", Y coords: " + posY;
            document.getElementById("client").innerHTML = coords;
        }
    </script>
</head>

<body>
    <h2>sick</h2>
    <p id="client"></p>
    <p>random insert for change</p>
    <div id="Container">
        <img style="border:dotted 1px; max-height: 100%; max-width:100%" alt="Klicka för att zooma" onclick="getImageCoords(event,this)"
             src="~/Pictures/free-human-body-vector.jpg"/>
    </div>
    <p>Var gör det ont ?</p>
</body>
