}
<head>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <style>
        input[type=range] {
            -webkit-appearance: none;
            width: 100%;
            margin: 14.3px 0;
        }

            input[type=range]:focus {
                outline: none;
            }

            input[type=range]::-webkit-slider-runnable-track {
                width: 100%;
                height: 11.4px;
                cursor: pointer;
                box-shadow: 1px 1px 1px #000000, 0px 0px 1px #0d0d0d;
                background: rgba(173, 220, 247, 0.78);
                border-radius: 1.3px;
                border: 0.2px solid #010101;
            }

            input[type=range]::-webkit-slider-thumb {
                box-shadow: 0.9px 0.9px 1px #000031, 0px 0px 0.9px #00004b;
                border: 1.8px solid #00001e;
                height: 40px;
                width: 40px;
                border-radius: 40px;
                background: #ffffff;
                cursor: pointer;
                -webkit-appearance: none;
                margin-top: -14.5px;
            }

            input[type=range]:focus::-webkit-slider-runnable-track {
                background: rgba(196, 230, 249, 0.78);
            }

            input[type=range]::-moz-range-track {
                width: 100%;
                height: 11.4px;
                cursor: pointer;
                box-shadow: 1px 1px 1px #000000, 0px 0px 1px #0d0d0d;
                background: rgba(173, 220, 247, 0.78);
                border-radius: 1.3px;
                border: 0.2px solid #010101;
            }

            input[type=range]::-moz-range-thumb {
                box-shadow: 0.9px 0.9px 1px #000031, 0px 0px 0.9px #00004b;
                border: 1.8px solid #00001e;
                height: 40px;
                width: 40px;
                border-radius: 40px;
                background: #ffffff;
                cursor: pointer;
            }

            input[type=range]::-ms-track {
                width: 100%;
                height: 11.4px;
                cursor: pointer;
                background: transparent;
                border-color: transparent;
                color: transparent;
            }

            input[type=range]::-ms-fill-lower {
                background: rgba(150, 210, 245, 0.78);
                border: 0.2px solid #010101;
                border-radius: 2.6px;
                box-shadow: 1px 1px 1px #000000, 0px 0px 1px #0d0d0d;
            }

            input[type=range]::-ms-fill-upper {
                background: rgba(173, 220, 247, 0.78);
                border: 0.2px solid #010101;
                border-radius: 2.6px;
                box-shadow: 1px 1px 1px #000000, 0px 0px 1px #0d0d0d;
            }

            input[type=range]::-ms-thumb {
                box-shadow: 0.9px 0.9px 1px #000031, 0px 0px 0.9px #00004b;
                border: 1.8px solid #00001e;
                height: 40px;
                width: 40px;
                border-radius: 40px;
                background: #ffffff;
                cursor: pointer;
                height: 11.4px;
            }

            input[type=range]:focus::-ms-fill-lower {
                background: rgba(173, 220, 247, 0.78);
            }

            input[type=range]:focus::-ms-fill-upper {
                background: rgba(196, 230, 249, 0.78);
            }
    </style>

</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <span class="glyphicon glyphicon-heart" aria-hidden="true" style="float:right"></span>
        </div>
        <div class="col-md-3" style="position:center">
            <input type="range" id="slider1" value="50" onchange="myFunction()" />
        </div>
        <div class="col-md-5">
            <span class="glyphicon glyphicon-heart-empty" aria-hidden="true" style="float:left"></span>
        </div>
    </div>
    <br />
    <div class="col-lg-offset-4">
        <button id="but1" type="button" class="btn btn-default col-lg-3 col-lg-offset-1" style="border-radius 10px">Submit</button>
    </div>
    <h2 id="output">test</h2>

</body>
