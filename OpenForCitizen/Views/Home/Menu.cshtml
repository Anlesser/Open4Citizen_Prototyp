
@{
    ViewBag.Title = "Menu";
}

<style>
    .container-fluid {
    }

    .menulayout {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: white;
        min-width: 300px;
        position: center;
        border-radius: 15px;
        margin-bottom: 15px;
        border-style: solid;
        border-width:3px;
        border-color:gray;

    }

    div.ex2 {
        border-radius: 15px;
        margin: auto;
        background-color: white;
        margin-bottom: 15px;
        margin-top: 5px;
        text-align: center;
        max-width: 900px;
        min-width: 300px;
        background-color:white;
        border-style: solid;
        border-width:3px;
        border-color:gray;
    }



    .item {
        color: black;
    }
</style>

<head>
    <title></title>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.intellisense.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/MainStylesheet.css">


</head>
<body>
    <div class="container-fluid text-center">

        <div class="ex2">
            <div class="row">
                <div class="col-md-12">
                    <h2 style="color:black">Aktuell Information</h2>
                </div>
            </div>
            <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
                <!-- Indicators -->
                <div class="row">
                    <div class="col-md-12">
                        <ol class="carousel-indicators" style="bottom:-20px;">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <h4>Det är kallt ute. Slå på värmen i hushållen så ni inte fryser!</h4>
                            </div>
                            <div class="item">
                                <h4>Det är magsjuka i trakterna så håll er hemma.</h4>
                            </div>
                            <div class="item">
                                <h4>"Kom ihåg att borsta tänderna på morgonen.</h4>
                            </div>
                            <div class="item">
                                <h4>Sovit dåligt? Ta sovmorgon idag.</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Left and right controls -->
            @*<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>*@
        </div>


        <div class="row">
            <div class="col-md-6 col-sm-6">
                <button class="btn btn-default btn-group-lg menulayout">
                    <span class="glyphicon glyphicon-heart" style="font-size:40px;margin-top:auto; color:red"></span>
                    <div style="font-size:xx-large; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Håll dig frisk</div>
                </button>
            </div>

            <div class="col-md-6 col-sm-6">
                <form action="@Url.Action("sick", "Home")">
                    <button class="btn btn-default btn-group-lg menulayout">
                        <span class="glyphicon glyphicon-user" style="font-size:40px;margin-top:auto; color:#ff6a00"></span>
                        <div style="font-size:xx-large; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Sjuk</div>
                    </button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <form action="@Url.Action("InformationOmVarden", "Home")">
                    <button class="btn btn-default btn-group-lg menulayout">
                        <span class="glyphicon glyphicon-info-sign" style="font-size:40px;margin-top:auto; color:mediumseagreen"></span>
                        <div style="font-size:xx-large; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Information</div>
                    </button>
                </form>
            </div>

            <div class="col-md-6 col-sm-6">
                <form action="@Url.Action("Questions","Home")">
                    <button class="btn btn-default btn-group-lg menulayout">
                        <span class="glyphicon glyphicon-question-sign" style="font-size:40px;margin-top:auto; color:cornflowerblue"></span>
                        <div style="font-size:xx-large; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Frågor</div>
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>