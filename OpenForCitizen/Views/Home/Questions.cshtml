<script type="text/javascript">
    function getOpeninghours(location) {
        $.ajax({
            url: "@Url.Action("openingHours", "Home")",
            data: { healthplace: location },
            success: function (data) {
                if (location === "vardcentralen") {
                    $("#VCopen").text(data);
                }
                else { $("#FTVopen").text(data); }
            },
            type: "POST"
        });
    }
    function getPhonehours(location) {
        $.ajax({
            url: "@Url.Action("phoneHours", "Home")",
            data: { healthplace: location },
            success: function (data) {
                if (location === "vardcentralen") {
                    $("#VCtele").text(data);
                }
                else { $("#FTVtele").text(data); }
            },
            type: "POST"
        });
    }

</script>
<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-md-6">
        <img class="VC" src="~/Pictures/krpVC.JPG" alt="" />
    </div>
    <div class="col-xs-12 col-md-6 ">
        <div class="textbox">
            <h2> Vårdcentralen Kronoparken</h2>
            <script>getOpeninghours("vardcentralen");</script>
            <script>getPhonehours("vardcentralen");</script>

            <p style="font-size: 18px">
                <b>Öppettider idag:</b>
                <text id="VCopen"></text>
            </p>
            <p style="font-size: 18px">
                <b>Telefontider idag:</b>
                <text id="VCtele"></text>
