<script type="text/javascript">
    function getOpeninghours(location) {
        $.ajax({
            url: "@Url.Action("openingHours", "Home")",
            data: { healthplace: location },
            success: function (data) {
                if (location === "vardcentralen") {
                    $("#vardcentralen").text(data);
                }
                else { $("#folktandvarden").text(data); }
            },
            type: "POST"
        });
    }
</script>
